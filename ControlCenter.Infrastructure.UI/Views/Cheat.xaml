<UserControl x:Class="ControlCenter.Infrastructure.UI.Views.Cheat"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True"
             mc:Ignorable="d" 
             d:DesignHeight="25" d:DesignWidth="119">
    <Grid Background="#FFECE9D8">
        <Button HorizontalAlignment="Left" VerticalAlignment="Top" Width="24" Height="25" Background="#FFECE9D8" BorderBrush="#FFECE9D8" Command="{Binding ChangeLockStateCommand}">
            <StackPanel>
                <Image Source="../Resources/unlocked.ico"/>
            </StackPanel>
        </Button>
        <Button Content="{Binding ButtonContent}" HorizontalAlignment="Left" Margin="24,0,0,0" VerticalAlignment="Top" Width="96" Height="25" Background="#FFECE9D8" BorderBrush="#FFECE9D8" ToolTip="{Binding ButtonToolTip}"/>
    </Grid>
</UserControl>
