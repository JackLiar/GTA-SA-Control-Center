<UserControl x:Class="ControlCenter.Infrastructure.UI.Views.StatBarChk"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="220">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <DockPanel Margin="3,3,3,3">
            <CheckBox Name="CheckBox" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <Button Name="Button" HorizontalAlignment="Right" Height="18" Padding="2,0,2,2"/>
        </DockPanel>
        <ScrollBar Grid.Row="1" Orientation="Horizontal" Name="ScrollBar" HorizontalAlignment="Right" Width="217" VerticalAlignment="Top" Maximum="200"  Margin="3,3,3,3"/>
    </Grid>
</UserControl>
