<UserControl x:Class="ControlCenter.Infrastructure.UI.Views.StatBarTxt"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="220">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <DockPanel>
            <TextBlock Name="TextBlock" HorizontalAlignment="Left" VerticalAlignment="Center" TextWrapping="Wrap"/>
            <Button Name="Button" HorizontalAlignment="Right" Width="30" Height="18" Padding="0,-2,0,0"/>
        </DockPanel>
        <ScrollBar Grid.Row="1" Orientation="Horizontal" Name="ScrollBar" HorizontalAlignment="Right" Width="217" VerticalAlignment="Top" Maximum="200"/>
    </Grid>
</UserControl>
