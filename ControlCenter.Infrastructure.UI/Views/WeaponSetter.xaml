<UserControl x:Class="ControlCenter.Infrastructure.UI.Views.WeaponSetter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:inf="clr-namespace:ControlCenter.Infrastructure.UI.Views"
             mc:Ignorable="d" 
             d:DesignHeight="17" d:DesignWidth="300">
    <DockPanel>
        <CheckBox Height="17"/>
        <ComboBox Height="17"/>
        <TextBox Name="TextBox" Height="17" DataContext="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=inf:WeaponSetter}}" IsEnabled="{Binding IsTextBoxEnable}" Width="30"/>
        <inf:AcceptButton HorizontalAlignment="Right"/>
    </DockPanel>
</UserControl>