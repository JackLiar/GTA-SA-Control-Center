<UserControl x:Class="ControlCenter.PlayerData.Views.WeaponSetter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:inf="clr-namespace:ControlCenter.Infrastructure.UI.Views;assembly=ControlCenter.Infrastructure.UI"
             xmlns:local="clr-namespace:ControlCenter.PlayerData.Views"
             mc:Ignorable="d" 
             d:DesignHeight="17" d:DesignWidth="79">
        <StackPanel Orientation="Horizontal">
            <TextBox Name="TextBox" HorizontalContentAlignment="Center" DataContext="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=local:WeaponSetter}}" IsEnabled="{Binding IsTextBoxEnable}" MinWidth="60"/>
            <inf:AcceptButton Margin="2,0,0,0"/>
        </StackPanel>
</UserControl>